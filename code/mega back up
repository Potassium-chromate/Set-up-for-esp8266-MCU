#include <Servo.h>

#define NUM_SERVOS 2  // replace with the number of your servos
#define START_CHAR '<'
#define END_CHAR '>'

Servo servos[NUM_SERVOS];

void setup() {
  Serial.begin(9600);
  pinMode(31, OUTPUT);
  for (int i = 0; i < NUM_SERVOS; i++) {
    servos[i].attach(i+2);  // assumes servos are on pins 2 through NUM_SERVOS+1
  }
}

void loop() {
  if (Serial.available()) {
    
    static String received = "";
    char inChar = (char)Serial.read();
    if (inChar == START_CHAR) {
      received = "";  // start a new message
    } else if (inChar == END_CHAR) {
      parseAndMoveServos(received);  // complete message received
    } else {
      received += inChar;  // add to the message
    }
  }
}

void parseAndMoveServos(String received) {
  int servoNum = 0;
  int startIdx = 0;
  int commaIdx = received.indexOf(',');
  while (commaIdx != -1 && servoNum < NUM_SERVOS) {
    servos[servoNum++].write(received.substring(startIdx, commaIdx).toInt());
    startIdx = commaIdx+1;
    commaIdx = received.indexOf(',', startIdx);
  }
  if (servoNum < NUM_SERVOS) {
    servos[servoNum].write(received.substring(startIdx).toInt());
  }
}
